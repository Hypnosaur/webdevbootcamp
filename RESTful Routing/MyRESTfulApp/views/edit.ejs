<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= dog.title %></div>
    <form class="ui form" action="/dogs/<%=dog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="dog[title]" value="<%= dog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="dog[image]" value="<%= dog.image %>">
        </div>
        <div class="field">
            <label>Dog Content</label>
            <textarea name="dog[body]"><%= dog.body %></textarea>
        </div>
        <input class="ui black button" type="submit">
    </form>
    
</div>

<% include ./partials/footer %>
